<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <View
            android:text="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/rect1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/rect2"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:elevation="0dp"
            android:background="@drawable/shape_rect" android:visibility="visible"/>
    <View
            android:text="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/rect2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:background="@drawable/shape_rect" android:visibility="visible"/>
    <View
            android:text="3"
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/rect3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/rect2" android:layout_marginStart="8dp"
            android:background="@drawable/shape_rect" android:visibility="visible"/>
    <View
            android:text="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/rect4" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/rect1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/rect5" android:layout_marginEnd="8dp"
            android:background="@drawable/shape_rect" android:visibility="invisible"/>
    <View
            android:text="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/rect5" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/rect2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:background="@drawable/shape_rect" android:visibility="invisible"/>
    <View
            android:text="3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/rect6"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/rect5" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/rect3"
            android:background="@drawable/shape_rect" android:visibility="invisible"/>
    <Button
            android:text="Новая игра"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restartButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/rect2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:visibility="invisible"/>
    <TextView
            android:layout_width="259dp"
            android:layout_height="47dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/rect5" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:textAlignment="center" android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>